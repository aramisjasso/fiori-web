<mvc:View
  controllerName="com.inv.sapfiori.controller.Main"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  height="100%">
  
  <IconTabBar
    id="mainNav"
    expanded="true"
    select=".onTabSelect"
    class="sapUiNoContentPadding">
    <items>
      <IconTabFilter text="Inversions" key="inversions" />
      <IconTabFilter text="Security" key="security" />
      <IconTabFilter text="Catalogs" key="catalogs" />
    </items>
  </IconTabBar>

  <NavContainer 
    id="navCon"
    height="100%"
    class="sapUiNoContentPadding">
    <pages>
      <mvc:XMLView viewName="com.inv.sapfiori.view.Inversions" id="inversionsView"/>
      <mvc:XMLView viewName="com.inv.sapfiori.view.Security" id="securityView"/>
      <mvc:XMLView viewName="com.inv.sapfiori.view.Catalogs" id="catalogsView"/>
    </pages>
  </NavContainer>
</mvc:View>